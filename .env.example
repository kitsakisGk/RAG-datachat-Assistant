# Environment Configuration
# Copy this file to .env and fill in your values

# Environment (development or production)
ENVIRONMENT=development

# Database Configuration
# For local development, use SQLite
DATABASE_TYPE=sqlite
SQLITE_PATH=data/users.db

# For production, use PostgreSQL
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=tinyllama

# Vector Store Configuration
VECTOR_STORE_PATH=data/vector_store/chroma_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# JWT Secret (change this in production!)
# Generate a new secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=change-this-in-production-use-random-secret

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Log Level
LOG_LEVEL=INFO
